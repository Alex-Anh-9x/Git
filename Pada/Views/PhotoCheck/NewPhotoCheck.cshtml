@model IEnumerable<Pada.Models.PendingPhotoRequest>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table" border="1">
        <thead>
            <tr>
                @*<th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>*@
                <th>
                    <center>Face Photo</center>
                </th>
                <th>
                    <center>Random Photo</center>
                </th>
                <th>
                    <center>Full Photo</center>
                </th>
            </tr>
        </thead>
        <tbody>
            @*@Model.ToList();*@
            @{ var randomUser = Model.Where(u => u.Email != ViewBag.CurrentUserEmail).ToArray()[(new Random()).Next(0, Model.ToArray().Length)];}
            <tr>
                @*<td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>*@
                <td>
                    <center><img src=@randomUser.FacePhotoPath alt="alternatetext" style="width:256px;height:256px;"></center>
                </td>
                <td>
                    <center><img src=@randomUser.AnyPhotoPath alt="alternatetext" style="width:256px;height:256px;"></center>
                </td>
                <td>
                    <center><img src=@randomUser.FullPhotoPath alt="alternatetext" style="width:256px;height:256px;"></center>
                </td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>

